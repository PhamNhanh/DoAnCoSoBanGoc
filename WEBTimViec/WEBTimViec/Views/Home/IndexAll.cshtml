@model ViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body >
    <div>
        <h4 class="center"> Danh sách nhà tuyển dụng </h4>
        <form action="@Url.Action("DetailsNhaTuyenDung", "Home")" method="get">
 <div class="row">
                @foreach (var nhaTuyenDung in Model.ApplicationUsers)
                {

                    <div class="col-md-4">
                            <div class="TheBai">
                                <h3 class="center">@nhaTuyenDung.NhaTuyenDung_name</h3>
                                <p class="limit-text">->  <strong>Website:</strong> @nhaTuyenDung.Website</p>
                                <a href="@Url.Action("DetailsNhaTuyenDung", new { id = nhaTuyenDung.Id })" class="button">Chi tiết</a>
                            </div>
                        </div>
                        }
                    </div>
        </form>
    </div>
    <div>
        <div>
            <h4 class="center-text"> Tìm kiếm công việc bạn ưa thích</h4>
            <form action="@Url.Action("TimKiem", "Home")" method="get">
                <div class="row g-2 align-items-end">
                    <div class="col-md-3" style="padding-right: 10px;">
                        <div class="row g-2">
                            <div class="col-12">
                                <input type="text" name="job_name" class="form-control border-0" placeholder="Tên công việc" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-right: 10px;">
                        <div class="form-group">
                            <label asp-for="ThanhPhoId" class="control-label" style="font-weight: bold;">Địa điểm công ty</label>
                            <select asp-for="ThanhPhoId" class="form-control">
                                <option value="">-- Chọn tỉnh - Thành phố --</option>
                                @foreach (var thanhPho in Model.ThanhPhos)
                                {
                                    <option value="@thanhPho.ThanhPho_id">@thanhPho.ThanhPho_name</option>
                                }
                            </select>
                            <span asp-validation-for="ThanhPhoId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-right: 10px;">
                        <div class="form-group">
                            <label asp-for="chuyenNganhId" class="control-label" style="font-weight: bold;">Chuyên ngành yêu cầu</label>
                            <select asp-for="chuyenNganhId" class="form-control">
                                <option value="">-- Chọn chuyên ngành --</option>
                                @foreach (var chuyenNganh in Model.ChuyenNganhs)
                                {
                                    <option value="@chuyenNganh.ChuyenNganh_id">@chuyenNganh.ChuyenNganh_name</option>
                                }
                            </select>
                            <span asp-validation-for="chuyenNganhId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-dark border-0">Tìm kiếm</button>
                    </div>
                </div>
            </form>
            <h5 class="center-text spacing-top">
                Bài tuyển dụng phù hợp
            </h5>
            <div class="row">
                @foreach (var baiTuyenDung in Model.BaiTuyenDungs)
                {

                    <div class="col-md-4">
                        <div class="TheBai">
                            <h3 class="center">@baiTuyenDung.TenCongViec</h3>
                            @*                                 <p class="limit-text"><strong>Mô tả công việc:</strong> @baiTuyenDung.MoTaCongViec</p> *@
                            <p class="limit-text">->  <strong>Yêu cầu kỹ năng:</strong> @baiTuyenDung.YeuCauKyNang</p>
                            @*                                 <p class="limit-text"><strong>Phúc lợi:</strong> @baiTuyenDung.PhucLoi</p> *@
                            <p class="limit-text">->  <strong>Lương:</strong> @baiTuyenDung.Luong_min - @baiTuyenDung.Luong_max triệu đồng</p>
                            <p class="limit-text">->  <strong>Loại công việc:</strong> @baiTuyenDung.KieuCongViec</p>
                            <p class="limit-text">->  <strong>Hạn nộp hồ sơ:</strong> @baiTuyenDung.ThoiGianHetHan</p>
                            <a href="@Url.Action("DetailsBaiTuyenDung", new { id = baiTuyenDung.BaiTuyenDung_id })" class="button">Chi tiết</a>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

</body>