@model ViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="~/site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid p-0">
        <!-- Slider Section -->
        <div id="heroSlider" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/elements/g1.jpg" class="d-block w-100 img-fluid" alt="Banner">
                    <div class="carousel-caption d-flex flex-column justify-content-center align-items-center text-center">
                        <h1 class="text-uppercase fw-bold text-light" style="font-size: 5rem; text-shadow: 3px 3px 6px #000;">
                            Bạn có năng lực
                        </h1>
                        <h2 class="text-light fw-semibold mt-3" style="font-size: 3rem; text-shadow: 3px 3px 6px #000;">
                            Chúng tôi có công việc
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Featured Majors Section -->
        <section class="our-services py-5">
            <div class="container">
                <div class="text-center mb-5">
                    <span class="text-uppercase text-secondary">QUYẾT ĐỊNH TƯƠNG LAI CỦA BẠN</span>
                    <h2 class="fw-bold">Chuyên ngành nổi bật</h2>
                </div>
                <div class="row g-4">
                    @foreach (var major in Model.Majors)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card text-center shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title"><a href="#" class="text-decoration-none">@major.ChuyenNganhName</a></h5>
                                    <p class="text-muted">(@major.JobCount)</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-center mt-4">
                    <a href="@Url.Action("ListBaiTuyenDung", "NTD")" class="btn btn-outline-primary">Tất cả bài tuyển dụng</a>
                </div>
            </div>
        </section>

        <!-- Job Search Section -->
        <section class="job-search py-5">
            <div class="container">
                <h2 class="fw-bold text-center mb-5">Tìm kiếm công việc bạn ưa thích</h2>
                <form action="@Url.Action("TimKiem", "NTD")" method="get">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="JobName" class="control-label font-weight-bold">Tên công việc</label>
                                <input type="text" name="JobName" class="form-control" placeholder="Tên công việc" value="@Model.JobName" />
                                <span asp-validation-for="JobName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ThanhPhoId" class="control-label font-weight-bold">Địa điểm công ty</label>
                                <select name="ThanhPhoId" class="form-control">
                                    <option value="">-- Chọn tỉnh - Thành phố --</option>
                                    @foreach (var thanhPho in Model.ThanhPhos)
                                    {
                                        <option value="@thanhPho.ThanhPho_id">@thanhPho.ThanhPho_name</option>
                                    }
                                </select>
                                <span asp-validation-for="ThanhPhoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="chuyenNganhId" class="control-label font-weight-bold">Chuyên ngành yêu cầu</label>
                                <select name="chuyenNganhId" class="form-control">
                                    <option value="">-- Chọn chuyên ngành --</option>
                                    @foreach (var chuyenNganh in Model.ChuyenNganhs)
                                    {
                                        <option value="@chuyenNganh.ChuyenNganh_id">@chuyenNganh.ChuyenNganh_name</option>
                                    }
                                </select>
                                <span asp-validation-for="chuyenNganhId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-auto">
                            <button type="submit" class="btn btn-dark border-0">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!-- Job Listings Section -->
        <section class="job-listings py-5">
            <div class="container">
                <h2 class="fw-bold text-center mb-5">Bài tuyển dụng phù hợp</h2>
                <div class="row g-4">
                    @foreach (var baiTuyenDung in Model.BaiTuyenDungs)
                    {
                        <div class="col-md-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-center" style="font-size: 1.5rem; font-style: italic;">@baiTuyenDung.TenCongViec</h5>
                                    <p class="card-text"><strong>Công ty: </strong>@baiTuyenDung.applicationUser.NhaTuyenDung_name</p>
@*                                     <p class="card-text"><strong>Yêu cầu kỹ năng: </strong>@baiTuyenDung.YeuCauKyNang</p> *@
                                    <p class="card-text"><strong>Thành phố làm việc: </strong>@baiTuyenDung.thanhPho.ThanhPho_name</p>
                                    <p class="card-text"><strong>Lương: </strong>@baiTuyenDung.Luong_min - @baiTuyenDung.Luong_max triệu đồng</p>
                                    <p class="card-text"><strong>Loại công việc: </strong>@baiTuyenDung.KieuCongViec</p>
                                    <p class="card-text"><strong>Hạn nộp hồ sơ: </strong>@baiTuyenDung.ThoiGianHetHan</p>
                                    <div class="text-center">
                                        <a href="@Url.Action("DetailsBaiTuyenDung", new { id = baiTuyenDung.BaiTuyenDung_id })" class="btn btn-primary">Chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>

    <!-- Include necessary JS files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>
