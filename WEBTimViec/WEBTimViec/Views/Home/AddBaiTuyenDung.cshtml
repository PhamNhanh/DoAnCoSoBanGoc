@model WEBTimViec.Models.BaiTuyenDung

@{
    ViewData["Title"] = "Thêm bài tuyển dụng";
    Layout = "~/Views/Shared/_LayoutNhaTuyenDung.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WEBTimViec</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>

        .select2-container--default .select2-selection--multiple .select2-selection__rendered {
            color: black; /* Đặt màu chữ thành màu đen */
        }

        #chuyenNganhSelect {
            background-color: white; /* Đặt màu nền thành màu đen */
            color: black; /* Đặt màu chữ thành màu trắng */
        }

        #selectedChuyenNganh {
            background-color: white; /* Đặt màu nền thành màu đen */
            color: black; /* Đặt màu chữ thành màu trắng */
        }

        body {
            background-color: #1a1a1a;
            color: #fff;
        }

        .form-group label {
            font-weight: bold;
            color: #28a745; /* Màu chữ xanh lá cây */
        }

        .btn-primary {
            background-color: #28a745; /* Màu nền nút */
            border-color: #28a745; /* Màu viền nút */
        }

            .btn-primary:hover {
                background-color: #218838; /* Màu nền nút khi hover */
                border-color: #218838; /* Màu viền nút khi hover */
            }
    </style>
</head>
<p>
    <a href= @Url.Action("Index")" class="btn btn-primary">Back to List</a>
</p>
<h1 class="text-primary">Thêm tin tuyển dụng</h1>
<hr />
<div class="row">
    <div class="col-md-4 d-flex justify-content-center">
        <form asp-action="AddBaiTuyenDung" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenCongViec" class="control-label"><i class="fas fa-user"></i> Tên công việc</label>
                <input asp-for="TenCongViec" class="form-control" required />
                <span asp-validation-for="TenCongViec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTaCongViec" class="control-label"><i class="fas fa-file-alt"></i> Mô tả công việc</label>
                <textarea asp-for="MoTaCongViec" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="MoTaCongViec" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="YeuCauKyNang" class="control-label"><i class="fas fa-check"></i> Yêu cầu công việc</label>
                <textarea asp-for="YeuCauKyNang" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="YeuCauKyNang" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhucLoi" class="control-label"><i class="fas fa-gift"></i> Phúc lợi</label>
                <textarea asp-for="PhucLoi" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="PhucLoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KieuCongViec" class="control-label"><i class="fas fa-briefcase"></i> Loại công việc</label>
                <select asp-for="KieuCongViec" class="form-control">
                    <option value="Full-Time">Full-Time</option>
                    <option value="Part-Time">Part-Time</option>
                </select>
                <span asp-validation-for="KieuCongViec" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label asp-for="Luong_min" class="control-label"><i class="fas fa-money-bill"></i> Lương từ</label>
                        <div class="input-group">
                            <input asp-for="Luong_min" class="form-control" type="number" required />
                            <div class="input-group-append">
                                <span class="input-group-text">triệu đồng</span>
                            </div>
                        </div>
                        <span asp-validation-for="Luong_min" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Luong_max" class="control-label"><i class="fas fa-money-bill"></i> Đến</label>
                        <div class="input-group">
                            <input asp-for="Luong_max" class="form-control" type="number" required />
                            <div class="input-group-append">
                                <span class="input-group-text">triệu đồng</span>
                            </div>
                        </div>
                        <span asp-validation-for="Luong_max" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ThoiGianHetHan" class="control-label"><i class="fas fa-calendar"></i> Hạn nộp hồ sơ</label>
                <input asp-for="ThoiGianHetHan" class="form-control datepicker" asp-format="{0:dd/MM/yy}" required />
                <span asp-validation-for="ThoiGianHetHan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="thanhPhoId" class="control-label" style="font-weight: bold;">Địa điểm công ty</label>
                <select asp-for="thanhPhoId" asp-items="ViewBag.ThanhPho" class="form-control">
                    <option value="">-- Chọn tỉnh - Thành phố --</option>
                </select>
                <span asp-validation-for="thanhPhoId" class="text-danger"></span>
            </div>

@*             <div class="form-group">
                <label asp-for="KyNangMemId" class="control-label" style="font-weight: bold;">Ky Nang Mem</label>
                <select asp-for="KyNangMemId" asp-items="ViewBag.KyNangMem" class="form-control">
                    <option value="">-- Chọn tỉnh - Thành phố --</option>
                </select>
                <span asp-validation-for="KyNangMemId" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="kinhNghiemId" class="control-label" style="font-weight: bold;">
                    <i class="fas fa-user-tie"></i> 
                    Kinh nghiệm ứng viên
                </label>
                <select asp-for="kinhNghiemId" asp-items="ViewBag.KinhNghiem" class="form-control">
                    <option value="">-- Chọn Kinh nghiệm --</option>
                </select>
                <span asp-validation-for="kinhNghiemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="chuyenNganh.ChuyenNganh_name" class="control-label" style="font-weight: bold;">
                    <i class="fas fa-user-tie"></i> 
                    Chuyên ngành ứng viên
                </label>
                <select asp-for="chuyenNganh.ChuyenNganh_name" asp-items="ViewBag.ChuyenNganh" class="form-control" multiple="multiple" id="chuyenNganhSelect">
                </select>
                <span asp-validation-for="chuyenNganh.ChuyenNganh_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectedChuyenNganh" class="control-label" style="font-weight: bold;">
                    Chuyên ngành đã chọn
                </label>
                <textarea id="selectedChuyenNganh" class="form-control" readonly></textarea>
            </div>



            <div class="form-group">
                <label asp-for="viTriCongViec.ViTriCongViec_name" class="control-label" style="font-weight: bold;">
                    <i class="fas fa-user-tie"></i> <!-- Icon "User Tie" của Font Awesome -->
                    Vị Trí Công Việc 
                </label>
                <select asp-for="viTriCongViec.ViTriCongViec_name" asp-items="ViewBag.ViTriCongViec" class="form-control">
                    <option value="">-- Chọn Kinh nghiệm --</option>
                </select>
                <span asp-validation-for="viTriCongViec.ViTriCongViec_name" class="text-danger"></span>
            </div>
            </>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <script>
        $(function () {
            var today = new Date();
            $(".datepicker").datepicker({
                dateFormat: "dd/mm/yy",
                minDate: today
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            // Initialize select2
            $('#chuyenNganhSelect').select2({
                placeholder: "-- Chọn Chuyên Ngành --"
            });

            // Function to update the selectedChuyenNganh textarea
            function updateSelectedChuyenNganh() {
                var selected = $('#chuyenNganhSelect').val();
                var selectedText = [];
                if (selected) {
                    selected.forEach(function(id) {
                        selectedText.push($('#chuyenNganhSelect option[value="' + id + '"]').text());
                    });
                }
                $('#selectedChuyenNganh').val(selectedText.join(', '));
            }

            // Update the selectedChuyenNganh textarea when selection changes
            $('#chuyenNganhSelect').on('change', function() {
                updateSelectedChuyenNganh();
            });

            // Initial update to fill the textarea if there are already selected items
            updateSelectedChuyenNganh();
        });
    </script>
    }