@model WEBTimViec.Models.UngTuyen
@{
    ViewData["Title"] = "UngTuyen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var baiTuyenDung = ViewBag.BaiTuyenDung as WEBTimViec.Models.BaiTuyenDung;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Thay đổi màu nền và màu chữ */
        body {
            background-color: darkgray; /* Mã hex cho màu xám */
            /* Hoặc */
            /* background-color: rgb(240, 240, 240); */ /* Mã RGB cho màu xám */
            /* Hoặc */
            /* background-color: gray; */ /* Tên màu cho màu xám */
            color: White; /* Màu chữ đen */
            font-family: Arial, sans-serif; /* Sử dụng font chữ mặc định */
            margin: 0; /* Loại bỏ margin */
            padding: 0; /* Loại bỏ padding */
        }


        /* Phần header */
        header {
            background-color: #333; /* Màu nền đen cho header */
            color: #fff; /* Màu chữ trắng */
            padding: 20px; /* Khoảng cách padding */
            text-align: center; /* Căn giữa nội dung */
        }

        /* Phần content */
        .container {
            width: 80%; /* Độ rộng container */
            margin: auto; /* Canh giữa container */
            padding: 20px; /* Khoảng cách padding */
        }

        /* Form input */
        input[type="text"] {
            width: 100%; /* Độ rộng input */
            padding: 10px; /* Khoảng cách padding */
            margin-bottom: 10px; /* Khoảng cách dưới */
            box-sizing: border-box; /* Đảm bảo kích thước tính cả border và padding */
        }

        /* Button */
        input[type="submit"] {
            background-color: #ff3; /* Màu nền đen cho button */
            color: #fff; /* Màu chữ trắng */
            padding: 10px 20px; /* Khoảng cách padding */
            border: none; /* Loại bỏ đường viền */
            cursor: pointer; /* Con trỏ thành bàn tay khi di chuột vào button */
        }

            input[type="submit"]:hover {
                background-color: #555; /* Màu nền đậm khi hover */
            }

        h1 {
            color: Black;
        }

        input[type="submit"] {
            background-color: #007bff; /* Màu nền xanh dương cho nút */
            color: #fff; /* Màu chữ trắng */
            padding: 10px 20px; /* Khoảng cách padding */
            border: none; /* Loại bỏ đường viền */
            cursor: pointer; /* Con trỏ thành bàn tay khi di chuột vào nút */
            transition: background-color 0.3s ease; /* Hiệu ứng khi hover */
        }

            input[type="submit"]:hover {
                background-color: #28a745; /* Màu nền xanh lá khi hover */
            }

        .btn-primary {
            background-color: #17a2b8;
            border-color: #17a2b8;
            transition: background-color 0.3s ease, border-color 0.3s ease; /* Hiệu ứng khi hover */
        }

            .btn-primary:hover {
                background-color: Green;
                border-color: Green;
            }
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">Ứng tuyển cho công việc: @baiTuyenDung.TenCongViec</h3>

            <form asp-action="UngTuyen" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-12 col-sm-6">
                        <input type="text" asp-for="applicationUser.FullName" class="form-control" placeholder="Tên của bạn" required>
                        <span asp-validation-for="applicationUser.FullName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-sm-6">
                        <input type="email" asp-for="applicationUser.Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="applicationUser.Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-sm-6">

                        <label asp-for="url_CV" class="form-label me-2 mb-0">Chọn CV</label>
                        <input type="file" asp-for="url_CV" class="form-control bg-white" required>
                        <span asp-validation-for="url_CV" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <textarea class="form-control" asp-for="ThuGioiThieu" rows="5" placeholder="Thư giới thiệu" required></textarea>
                        <span asp-validation-for="ThuGioiThieu" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100" type="submit" value="Apply_job">Ứng tuyển ngay</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
