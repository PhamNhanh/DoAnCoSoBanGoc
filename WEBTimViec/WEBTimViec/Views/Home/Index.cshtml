@model IEnumerable<WEBTimViec.Models.BaiTuyenDung>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JobPlus</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1a1a1a;
            color: #fff;
        }

        header {
            background-color: #333;
            padding: 10px 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        h5 {
            color: #ff7f50;
        }

        h1 a {
            text-decoration: none;
            color: #3e4;
        }

        nav ul li a {
            text-decoration: none;
            color: #ff7f50;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li a {
            text-decoration: none;
            color: #fff;
        }

        .search-bar {
            background-color: #444;
            padding: 20px 0;
        }

        .search-bar h2 {
            margin: 0;
            text-align: center;
        }

        .search-bar form {
            text-align: center;
            margin-top: 20px;
        }

        .search-bar input[type="text"] {
            padding: 10px;
            margin-right: 10px;
            border: none;
            border-radius: 5px;
            background-color: #fff;
            color: #fff;
        }

        .search-bar button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
        }

        .search-bar button:hover {
            background-color: #0056b3;
        }

        .card {
            background-color: #333;
            color: #fff;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1><a asp-controller="Home" asp-action="Index">JobPlus</a></h1>
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li><a asp-controller="Home" asp-action="ListChuyenNganh">Chuyên Ngành</a></li>
                    <li><a asp-controller="Home" asp-action="ListThanhPho">Thành phố</a></li>
                    <li><a asp-controller="Home" asp-action="ListBaiTuyenDung">Bài tuyển dụng</a></li>
                    <li><a asp-controller="Home" asp-action="ListNhaTuyenDung">Nha tuyển dụng</a></li>
                    <li><a asp-controller="Home" asp-action="DSUngTuyen">Ứng tuyển</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="search-bar">
        <div class="container">
            <h5>Tìm kiếm công việc mơ ước của bạn</h5>
            <form action="#" method="get">
                <input type="text" name="keyword" placeholder="Nhập từ khóa...">
                <input type="text" name="location" placeholder="Nhập địa điểm...">
                <button type="submit">Tìm kiếm</button>
            </form>
        </div>
        <h1 class="mt-3">@ViewData["Title"]</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">@item.TenCongViec</h3>
                            <p class="card-text"><strong>Mô tả công việc:</strong> @item.MoTaCongViec</p>
                            <p class="card-text"><strong>Yêu cầu kỹ năng:</strong> @item.YeuCauKyNang</p>
                            <p class="card-text"><strong>Phúc lợi:</strong> @item.PhucLoi</p>
                            <p class="card-text"><strong>Lương:</strong> @item.Luong_min - @item.Luong_max triệu đồng</p>
                            <p class="card-text"><strong>Loại công việc:</strong> @item.KieuCongViec</p>
                            <p class="card-text"><strong>Hạn nộp hồ sơ:</strong> @item.ThoiGianHetHan</p>
                            <a href="@Url.Action("DetailsBaiTuyenDung", new { id = item.BaiTuyenDung_id })" class="btn btn-primary">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
                </div>
    </section>

</body>
</html>
   
