            @Html.DisplayNameFor(model => model.kinhNghiem)
        </dt> *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kinhNghiem.NamKinhNghiem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.chuyenNganh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.chuyenNganh.ChuyenNganh_id)
        </dd>
    </dl>
</div>
<div>
    <button onclick="location.href='@Url.Action("UngTuyen", new { id = Model?.BaiTuyenDung_id })'" class="btn btn-primary">Ứng tuyển</button>
