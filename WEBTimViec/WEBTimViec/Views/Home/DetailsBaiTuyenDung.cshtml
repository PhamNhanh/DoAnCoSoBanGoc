        </dd>
        <dt class = "col-sm-2">
            Phúc lợi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhucLoi)
        </dd>
        <dt class = "col-sm-2">
            Lương tối thiểu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Luong_min) Triệu
        </dd>
        <dt class = "col-sm-2">
            Lương tối đa 
