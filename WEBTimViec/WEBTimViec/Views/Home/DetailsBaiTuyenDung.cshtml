            @Html.DisplayNameFor(model => model.thanhPho)
        </dt>
 *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.thanhPho.ThanhPho_name)
        </dd>
        <dt class="col-sm-2">
            Yêu cầu kinh nghiệm
        </dt>
