@model WEBTimViec.Models.BaiTuyenDung

@{
    ViewData["Title"] = "DetailsBaiTuyenDung";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WEBTimViec</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
            padding-top: 20px; /* Để không dính vào top của browser */
        }

        .card {
            margin-bottom: 20px;
            background-color: #333;
            color: #fff;
            border: none;
            transition: transform 0.3s ease; /* Hiệu ứng khi hover */
        }

        a {
            color: #17a2b8; /* Màu xanh dương nhạt cho các đường link */
        }

        .card:hover {
            transform: translateY(-5px); /* Hiệu ứng nhảy lên khi hover */
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #fff;
        }

        .card-text {
            margin-bottom: 5px;
            color: #ccc; /* Màu chữ xám nhạt cho nội dung */
        }

        .btn-primary {
            background-color: #17a2b8;
            border-color: #17a2b8;
            transition: background-color 0.3s ease, border-color 0.3s ease; /* Hiệu ứng khi hover */
        }

            .btn-primary:hover {
                background-color: green;
                border-color: green;
            }
    </style>
</head>

<p>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</p>
<h1>Chi tiết bài tuyển dụng</h1>

<div>
@*     <h4>BaiTuyenDung</h4> *@
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
