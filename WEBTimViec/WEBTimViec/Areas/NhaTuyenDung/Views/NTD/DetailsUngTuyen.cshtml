@model IEnumerable<WEBTimViec.Models.UngTuyen>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết các bài ứng tuyển</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Roboto', sans-serif;
        }

        .button-container {
            margin-top: 100px;
        }

        .btn-back {
            color: #000000; /* Màu chữ */
            text-decoration: none; /* Bỏ gạch chân */
            font-size: 16px; /* Kích thước chữ */
            font-weight: normal; /* Không đậm */
            transition: color 0.3s ease; /* Hiệu ứng khi hover */
        }

            .btn-back:hover {
                color: #0056b3; /* Màu khi hover */
            }
        .khung4 {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .tieude {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .styled-button {
            margin-top: 20px;
            display: inline-block;
        }

            .styled-button a {
                text-decoration: none;
                color: #007bff;
                font-size: 16px;
                font-weight: bold;
            }

                .styled-button a:hover {
                    color: #0056b3;
                }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary, .btn-success {
            padding: 8px 20px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <!-- Nút quay lại -->
    <!-- Nút quay lại -->
    <button class="btn btn-outline-primary">
        <a href="@Url.Action("DSUngTuyen", "NTD")" style=" margin-top: 100px;">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </button>

    <!-- Chi tiết các bài ứng tuyển -->
    <div class="khung4">
        <h1 class="tieude">Chi tiết các bài ứng tuyển</h1>

        @if (Model == null || !Model.Any())
        {
            <p class="text-center">Không có ứng viên nào ứng tuyển</p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã ứng tuyển</th>
                        <th>Tên ứng viên</th>
                        <th>Email ứng viên</th>
                        <th>Thời gian ứng tuyển</th>
@*                         <th>Thư giới thiệu</th> *@
                        <th>CV</th>
                        <th>Phản hồi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ungtuyen in Model.Select((value, index) => new { value, index }))
                    {
                        <tr>
                            <td>@(ungtuyen.index + 1)</td>
                            <td>@ungtuyen.value.UngTuyen_id</td>
                            <td>@ungtuyen.value.TenUngVien</td>
                            <td>@ungtuyen.value.EmailUV</td>
                            <td>@ungtuyen.value.ThoiGianUngTuyen</td>
@*                             <td>@ungtuyen.value.ThuGioiThieu</td> *@
                            <td>
                                <a href="@ungtuyen.value.url_CV" target="_blank" class="btn btn-link">Xem CV</a>
                            </td>
                            <td>
                                <form class="feedback-form">
                                    <input type="hidden" name="UngTuyen_id" value="@ungtuyen.value.UngTuyen_id" />
                                    <input type="hidden" name="BaiTuyenDung_id" value="@ungtuyen.value.BaiTuyenDungid" />
                                    @if (ungtuyen.value.TrangThai == null)
                                    {
                                        <input type="text" class="form-control" name="TrangThai" placeholder="Nhập phản hồi" value="@ungtuyen.value.TrangThai" />
                                        <button type="submit" class="btn btn-primary mt-2">Gửi phản hồi</button>
                                    }
                                    else
                                    {
                                        @* Kiểm tra nếu trạng thái có chữ "Chưa" hoặc "Không" thì nền màu đỏ, ngược lại màu xanh *@
                                        @if (ungtuyen.value.TrangThai.Contains("chưa") || ungtuyen.value.TrangThai.Contains("Không") || ungtuyen.value.TrangThai.Contains("không") || ungtuyen.value.TrangThai.Contains("Chưa"))
                                        {
                                            <input type="text" class="form-control" name="TrangThai" value="@ungtuyen.value.TrangThai" style="background-color: #f8d7da; color: black;" />
                                            <button type="submit" class="btn btn-danger mt-2">Gửi lại phản hồi</button>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" name="TrangThai" value="@ungtuyen.value.TrangThai" style="background-color: #54ec82; color: black;" />
                                            <button type="submit" class="btn btn-success mt-2">Gửi lại phản hồi</button>
                                        }
                                    }
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Script jQuery để xử lý gửi phản hồi -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.feedback-form').on('submit', function (e) {
                e.preventDefault();
                var $form = $(this);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SaveFeedback", "NTD")',
                    data: $form.serialize(),
                    success: function (response) {
                        alert('Phản hồi đã được gửi thành công.');
                        window.location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            });
        });
    </script>

</body>
</html>
