        <section class="job-listings card mt-5">
            <div class="card-body">
                <div class="section-tittle text-center">
                    <span>Các ứng viên phù hợp</span>
                </div>
                <div class="row">
                    @foreach (var ungvien in Model.ApplicationUsers)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <a href="@Url.Action("IndexProfileUV", "NTD", new { id = ungvien.Id })">
                                    <img src="@ungvien.image_url" class="card-img-top" alt="@ungvien.FullName" style="height: 200px; object-fit: cover;">
