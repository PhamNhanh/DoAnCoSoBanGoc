@model IEnumerable<WEBTimViec.Models.BaiTuyenDung>

@{
    ViewData["Title"] = "Danh sách bài tuyển dụng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WEBTimViec</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
   
</head>
<body>
    <header>
        <div class="container">
            <h1><a asp-controller="Home" asp-action="Index">JobPlus</a></h1>

        </div>
    </header>

    <section class="search-bar">
        <div class="container">
            <h5>Tìm kiếm công việc mơ ước của bạn</h5>
            <form action="#" method="get">
                <input type="text" name="keyword" placeholder="Nhập từ khóa...">
                <input type="text" name="location" placeholder="Nhập địa điểm...">
                <button type="submit">Tìm kiếm</button>
            </form>
        </div>
        <h1 class="mt-3">@ViewData["Title"]</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">@item.TenCongViec</h3>
                            <p class="card-text"><strong>Mô tả công việc:</strong> @item.MoTaCongViec</p>
                            <p class="card-text"><strong>Yêu cầu kỹ năng:</strong> @item.YeuCauKyNang</p>
                            <p class="card-text"><strong>Phúc lợi:</strong> @item.PhucLoi</p>
                            <p class="card-text"><strong>Lương:</strong> @item.Luong_min - @item.Luong_max triệu đồng</p>
                            <p class="card-text"><strong>Loại công việc:</strong> @item.KieuCongViec</p>
                            <p class="card-text"><strong>Hạn nộp hồ sơ:</strong> @item.ThoiGianHetHan</p>
                            <a href="@Url.Action("DetailsBaiTuyenDung", new { id = item.BaiTuyenDung_id })" class="btn btn-primary">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

</body>
</html>
