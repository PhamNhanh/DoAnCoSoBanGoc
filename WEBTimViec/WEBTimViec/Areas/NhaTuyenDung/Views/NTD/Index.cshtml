@model ViewModel

@{
    ViewData["Title"] = "Trang chủ  ";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="~/site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body>
    <div class="khung container">
        <!-- Slider Section -->
        <section class="slider-area">
            <div class="slider-active">
                <div class="single-slider slider-height d-flex align-items-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <img class="hero__image media" src="~/images/elements/g1.jpg" alt="" style="width: 100%; height: auto;">
                            </div>
                            <div class="col-xl-6 col-lg-9 col-md-10">
                                <div class="hero__caption">
                                    <h1>Bạn có công việc</h1>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-3 col-md-2">
                                <div class="hero__caption">
                                    <h1>Chúng tôi có nhân lực</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Majors Section -->
        <section class="our-services section-pad-t30 mt-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center">
                        <span>QUYẾT ĐỊNH TƯƠNG LAI CỦA BẠN</span>
                        <h2>Chuyên ngành nổi bật</h2>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                @foreach (var major in Model.Majors)
                {
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="single-services text-center">
                            <div class="services-cap">
                                <h5><a href="#">@major.ChuyenNganhName</a></h5>
                                <span>(@major.JobCount)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- View All Jobs Section -->
        <section class="view-all-jobs text-center mt-5">
            <a href="@Url.Action("ListBaiTuyenDung", "NTD")" class="btn btn-primary">Tất cả bài tuyển dụng</a>
        </section>
