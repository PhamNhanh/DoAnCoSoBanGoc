@model IEnumerable<WEBTimViec.Models.ApplicationUser>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách ứng viên</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="header">
        <img src="~/images/Logo.jpg" class="logo" />
        <h1> JobPlus </h1>
    </div>
    <div class="container">
        <h1 class="mt-5 mb-3">Danh sách ứng viên</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên đầy đủ</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Ngày sinh</th>
                    <th>Tự giới thiệu</th>
                    <th>Thêm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ungvien in Model)
                {
                    <tr>
                        <td>@ungvien.FullName</td>
                        <td>@ungvien.Email</td>
                        <td>@ungvien.DiaChi</td>
                        <td>@ungvien.SDT_UngVien</td>
                        <td>@ungvien.NgaySinh</td>
                        <td>@ungvien.TuGioiThieu</td>
                        <td>
                            <a href="@Url.Action("DetailsUngVien", "UV", new { id = ungvien.Id })" class="btn btn-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại</a>
    </div>
</body>
</html>
