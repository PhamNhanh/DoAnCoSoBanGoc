@model WEBTimViec.Models.ApplicationUser
@{
    ViewData["Title"] = "Thông tin nhà tuyển dụng";
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

    <link rel="manifest" href="~/site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .ha1 {
            padding: 20px 0;
        }

        .styled-button a {
            text-decoration: none;
            font-size: 18px;
            font-weight: bold;
        }

        .styled-button {
            background-color: #ffffff;
            border: 1px solid #dcdcdc;
            padding: 10px 15px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .styled-button:hover {
                background-color: #eaeaea;
                border-color: #cccccc;
            }

        .tieude h3 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .khung {
            background: #DCDCDC;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        .d-flex.flex-column {
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
            height: 100%; /* Chiều cao bằng khung cha */
            background-color: #f9f9f9;
            border-radius: 10px;
            padding: 15px;
        }

            .d-flex.flex-column img {
                border: 2px solid #e0e0e0;
                border-radius: 50%; /* Làm tròn ảnh logo */
                width: 150px; /* Kích thước ảnh */
                height: 150px; /* Kích thước ảnh */
                object-fit: cover; /* Đảm bảo ảnh không bị méo */
            }


            .d-flex.flex-column img {
                border: 2px solid #e0e0e0;
            }

        .info-section {
            margin-top: 20px;
            padding: 20px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            margin-bottom: 15px;
        }

            .info-item label {
                font-weight: bold;
                margin-bottom: 5px;
                color: #555;
            }

        .custom-background {
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
            color: #333;
            font-size: 16px;
        }

        .info-item textarea {
            width: 100%;
            height: 80px;
            resize: none;
            border: none;
        }

        .edit-link a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .edit-link a:hover {
                color: #0056b3;
            }

        .tieude {
            font-family: 'Montserrat', sans-serif;
            font-weight: bold;
            margin-top: 40px;
            text-align: center;
            font-size: 28px; /* Kích thước font chữ */
            color: #333; /* Màu chữ */
        }

    </style>

</head>
<body>
    <div class ="ha1">
        <div class="container">
            <button class=" styled-button">
                <a style="color: black;" href="@Url.Action("Index", "NTD")"> <<< </a>
            </button>
            <div class="tieude">
                <h3>Thông tin nhà tuyển dụng</h3>
            </div>
            <div class="khung">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <a href="@Url.Action("ListBaiTuyenDung", "NTD")">
                            <img class="rounded-circle mt-5" title="Nhấn vào đây để xem bài tuyển dụng" width="150px" src="@Model.image_url">
                        </a>

                        <span style="font-family: 'Times New Roman'" class="font-weight-bold"><h4>@Model.NhaTuyenDung_name</h4></span>
                        <span class="text-black-50">@Model.Email</span>
                    </div>
                </div>
                <div>

                    <div class="info-section">
                        <div class="info-item">
                            <label>Tên công ty</label>
                            <div class="custom-background">@Model.NhaTuyenDung_name</div>
                        </div>
                        <div class="info-item">
                            <label>SDT công ty</label>
                            <div class="custom-background">@Model.SDTNhaTuyenDung</div>
                        </div>
                        <div class="info-item">
                            <label>Website công ty</label>
                            <div class="custom-background">@Model.Website</div>
                        </div>
                        <div class="info-item">
                            <label>Tên cá nhân</label>
                            <div class="custom-background">@Model.FullName</div>
                        </div>
                        <div class="info-item">
                            <label>Địa điểm công ty</label>
                            <div class="custom-background">
                                @Model.DiaChi
                            </div>
                        </div>
                        <div class="info-item">
                            <label>Giới thiệu về công ty</label>
                            <textarea readonly class="custom-background">@Model.GioiThieuNhaTuyenDung</textarea>
                        </div>
                    </div>
                    <div class="edit-link">
                        <a href="@Url.Action("UpdateProfileNTD", new { id = Model.Id })">Chỉnh sửa thông tin</a>
                    </div>

                </div>
            </div>
        
        </div>
    </div>
</body>
</html>