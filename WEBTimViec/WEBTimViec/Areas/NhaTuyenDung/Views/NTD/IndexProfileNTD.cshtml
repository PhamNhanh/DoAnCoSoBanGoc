@model WEBTimViec.Models.ApplicationUser

@{
    ViewData["Title"] = "Thông tin nhà tuyển dụng";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] - JobPlus</title>
    <meta name="description" content="Thông tin chi tiết về nhà tuyển dụng">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/Profile.css" rel="stylesheet">
    <style>
        
    </style>
</head>

<body>
    <div class="ha1">
        <div class="container">
            <!-- Tiêu đề -->
            <div class="tieude text-center my-4">
                <h3>Thông tin nhà tuyển dụng</h3>
                <p style="font-size: 16px; color: #666;">
                    Hãy hoàn thiện hồ sơ của bạn để tăng độ uy tín và thu hút nhiều ứng viên hơn!
                </p>
            </div>

            <!-- Hình ảnh trang trí trên đầu -->
@*             <div class="text-center mb-4">
                <img src="~/assets/img/profile-decoration.png" alt="Trang trí hồ sơ" style="max-width: 100%; height: auto;">
            </div>
 *@
            <!-- Thanh tiến trình tổng phần trăm -->
            <div class="progress mb-4" style="height: 25px;">
                <div class="progress-bar" role="progressbar"
                     style="width: @ViewData["CompletionPercentage"]%; background-color: #28a745;"
                     aria-valuenow="@ViewData["CompletionPercentage"]"
                     aria-valuemin="0"
                     aria-valuemax="100">
                    @ViewData["CompletionPercentage"]%
                </div>
            </div>

            <!-- Khu vực thông tin nhà tuyển dụng -->
            <div class="khung p-4 shadow-sm rounded">
                <!-- Hình ảnh trang trí bên cạnh -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <p style="font-size: 18px; color: #555; font-style: italic;">
                            Hãy kiểm tra từng phần thông tin bên dưới và cập nhật nếu cần thiết.
                        </p>
                    </div>
@*                     <div>
                        <img src="~/assets/img/side-decoration.png" alt="Trang trí bên cạnh" style="width: 100px;">
                    </div> *@
                </div>

                <!-- 1. Ảnh logo -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Ảnh logo (10%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.image_url))
                        {
                            <img src="@Model.image_url" alt="Logo" width="100">
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["ImagePercent"]%</small>
                </div>

                <!-- 2. Tên công ty -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Tên công ty (10%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.NhaTuyenDung_name))
                        {
                            @Model.NhaTuyenDung_name
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["NamePercent"]%</small>
                </div>

                <!-- 3. Số điện thoại -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Số điện thoại (20%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.SDTNhaTuyenDung))
                        {
                            @Model.SDTNhaTuyenDung
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["PhonePercent"]%</small>
                </div>

                <!-- 4. Website -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Website (20%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <a href="@Model.Website" target="_blank">@Model.Website</a>
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["WebsitePercent"]%</small>
                </div>

                <!-- 5. Tên đầy đủ người đại diện -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Tên đầy đủ người đại diện (10%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.FullName))
                        {
                            @Model.FullName
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["FullNamePercent"]%</small>
                </div>

                <!-- 6. Địa chỉ -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Địa chỉ (20%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.DiaChi))
                        {
                            @Model.DiaChi
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["AddressPercent"]%</small>
                </div>

                <!-- 7. Giới thiệu nhà tuyển dụng -->
                <div class="info-item mb-3">
                    <label class="fw-bold">Giới thiệu nhà tuyển dụng (10%)</label>
                    <div class="custom-background p-2 border rounded">
                        @if (!string.IsNullOrEmpty(Model.GioiThieuNhaTuyenDung))
                        {
                            @Model.GioiThieuNhaTuyenDung
                        }
                        else
                        {
                            <p>Chưa cập nhật</p>
                        }
                    </div>
                    <small class="text-muted">Hoàn thành: @ViewData["DescriptionPercent"]%</small>
                </div>

                <!-- Hình ảnh trang trí dưới cùng -->
@*                 <div class="text-center mt-4">
                    <img src="~/assets/img/footer-decoration.png" alt="Trang trí cuối" style="max-width: 100%; height: auto;">
                </div> *@

                <!-- Nút chỉnh sửa thông tin -->
                <div class="edit-link">
                    <a href="@Url.Action("UpdateProfileNTD", new { id = Model.Id })" class="styled-button">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin
                    </a>
                </div>


            </div>
        </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js"></script>
</body>

</html>
