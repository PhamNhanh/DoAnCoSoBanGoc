@model WEBTimViec.Models.ApplicationUser
@{
    ViewData["Title"] = "Thông tin nhà tuyển dụng";
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
    </div>
    <div class="container-fluid bg-green mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
        <div class="row">
            <img class="rounded-circle mt-5" width="150px" src="@Model.image_url">
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 style="font-family: 'Times New Roman'" class="text-right">Thông tin nhà tuyển dụng</h3>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">Tên công ty</label>
                        <div class="form-control" style="font-family: 'Times New Roman'; font-size: 18px">@Model.NhaTuyenDung_name</div>
                    </div>
                    <div class="col-md-6">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">SDT công ty</label>
                        <div class="form-control" style="font-family: 'Times New Roman'; font-size: 18px">@Model.SDTNhaTuyenDung</div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">Website công ty</label>
                        <div class="form-control" style="font-family: 'Times New Roman'; font-size: 18px">@Model.Website</div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">Tên cá nhân</label>
                        <div class="form-control" style="font-family: 'Times New Roman'; font-size: 18px">@Model.FullName</div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">Địa điểm công ty</label>
                        <div class="form-control" style="font-family: 'Times New Roman'; font-size: 18px">@Model.DiaChi</div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels" style="font-family: 'Times New Roman'; font-size: 20px">Giới thiệu về công ty</label>
                        <textarea class="form-control" style="font-family: 'Times New Roman'; height: 200px; font-size: 18px">@Model.GioiThieuNhaTuyenDung</textarea>
                    </div>
                </div>
                <div class="row mt-3"">


                    <a class="button" asp-controller="NTD" asp-action="UpdateProfileNTD" style="font-family: 'Times New Roman'; font-size: 20px" asp-route-id="@Model.Id">Chỉnh sửa thông tin</a>
                </div>
            </div>
        </div>
    </div>
