@model ViewModel

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/BaiTuyenDung.css">
</head>


<body>
    <div class="khung">
            <h4 class="tieude"> Tìm kiếm công việc bạn ưa thích</h4>
        <form action="@Url.Action("TimKiem", "NTD")" method="get">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="JobName" class="control-label" style="font-weight: bold;">Tên công việc</label>
                        <input type="text" name="JobName" class="form-control" placeholder="Tên công việc" style="height: calc(2.25rem + 2px); border: 1px solid #ccc; padding: 0.375rem 0.75rem; border-radius: 4px;" value="@Model.JobName" />
                        @*                         <span asp-validation-for="JobName" class="text-danger"></span> *@
                    </div>
                </div>


                <div class="col-md-3" style="padding-right: 10px;">
                    <div class="form-group">
                        <label asp-for="ThanhPhoId" class="control-label" style="font-weight: bold;">Địa điểm công ty</label>
                        <select asp-for="ThanhPhoId" class="form-control">
                            <option value="">-- Chọn tỉnh - Thành phố --</option>
                            @foreach (var thanhPho in Model.ThanhPhos)
                            {
                                <option value="@thanhPho.ThanhPho_id">@thanhPho.ThanhPho_name</option>
                            }
                        </select>
                        <span asp-validation-for="ThanhPhoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3" style="padding-right: 10px;">
                    <div class="form-group">
                        <label asp-for="chuyenNganhId" class="control-label" style="font-weight: bold;">Chuyên ngành yêu cầu</label>
                        <select asp-for="chuyenNganhId" class="form-control">
                            <option value="">-- Chọn chuyên ngành --</option>
                            @foreach (var chuyenNganh in Model.ChuyenNganhs)
                            {
                                <option value="@chuyenNganh.ChuyenNganh_id">@chuyenNganh.ChuyenNganh_name</option>
                            }
                        </select>
                        <span asp-validation-for="chuyenNganhId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-dark border-0">Tìm kiếm</button>
                </div>
            </div>
        </form>

            <h5 class="center-text spacing-top">
                Bài tuyển dụng phù hợp

            </h5>
            <div class="row">
                @foreach (var baiTuyenDung in Model.BaiTuyenDungs)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                            <h3 class="card-title overflow-ellipsis">@baiTuyenDung.TenCongViec</h3>
                                <p class="card-text overflow-ellipsis"><strong>Yêu cầu kỹ năng:</strong> @baiTuyenDung.YeuCauKyNang</p>
                                @* <p class="card-text"><strong>Phúc lợi:</strong> @baiTuyenDung.PhucLoi</p> *@
                            <p class="card-text overflow-ellipsis"><strong>Thành phố làm việc:</strong> @baiTuyenDung.thanhPho.ThanhPho_name</p>
                            <p class="card-text overflow-ellipsis"><strong>Lương:</strong> @baiTuyenDung.Luong_min - @baiTuyenDung.Luong_max triệu đồng</p>
                            <p class="card-text overflow-ellipsis"><strong>Loại công việc:</strong> @baiTuyenDung.KieuCongViec</p>
                            <p class="card-text overflow-ellipsis"><strong>Hạn nộp hồ sơ:</strong> @baiTuyenDung.ThoiGianHetHan</p>
                                <a href="@Url.Action("DetailsBaiTuyenDung", new { id = baiTuyenDung.BaiTuyenDung_id })" class="btn btn-primary">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
    </div>



</body>