@model WEBTimViec.Models.LoaiTaiKhoan

@{
    ViewData["Title"] = "Xác Nhận Đăng Ký Gói Tài Khoản";
}

<head>
    <meta charset="UTF-8">
    <style>
        .container {
            margin-top: 50px;
            text-align: center;
        }

        .card {
            width: 50%;
            margin: 0 auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            background-color: #ffffff;
        }

            .card h2 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .card p {
                font-size: 16px;
                margin: 10px 0;
            }

        .btn {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<div class="container">
    <div class="card">
        <h2>Xác Nhận Đăng Ký Gói Tài Khoản</h2>

        <p><strong>Tên Gói:</strong> @Model.tenLoaiTaiKhoan</p>
        <p><strong>Số Bài Tuyển Dụng:</strong> @Model.soBaiTuyenDung</p>
        <p><strong>Giá:</strong> @Model.gia VND</p>
        <p><strong>Số Ngày Sử Dụng:</strong> @Model.soNgayDung ngày</p>

        <form asp-action="XacNhanDangKy" method="post">
            <input type="hidden" name="loaiTaiKhoanId" value="@Model.loaiTaiKhoanId" />
            <button type="submit" class="btn">Thanh Toán VNPay</button>
        </form>
    </div>
</div>
