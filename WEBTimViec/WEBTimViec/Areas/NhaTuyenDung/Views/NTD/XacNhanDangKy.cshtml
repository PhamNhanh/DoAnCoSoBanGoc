@model WEBTimViec.Models.XacNhanDangKyViewModel

@{
    ViewData["Title"] = "Xác Nhận Đăng Ký Loại Tài Khoản";
}
<head>
    <style>
        
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
            background-color: #ffffff;
        }

        .btn-lg {
            padding: 10px 20px;
            font-size: 18px;
        }

        .alert {
            border-radius: 5px;
        }

        .text-center {
            text-align: center;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        .mx-3 {
            margin-left: 1rem;
            margin-right: 1rem;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="card" style="margin-top: 80px">
        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p class="text-center">Bạn có chắc chắn muốn đăng ký loại tài khoản: <strong>@Model.LoaiTaiKhoan.tenLoaiTaiKhoan</strong>?</p>

            <form method="post">
                <input type="hidden" name="loaiTaiKhoanId" value="@Model.LoaiTaiKhoan.loaiTaiKhoanId" />
                <div class="text-center">
                    <button type="submit" name="confirm" value="true" class="btn btn-success btn-lg mx-3">Đồng Ý</button>
                    <button type="submit" name="confirm" value="false" class="btn btn-danger btn-lg mx-3">Hủy</button>
                </div>
            </form>

            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3 text-center">
                    @ViewData["SuccessMessage"]
                </div>
            }

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>
