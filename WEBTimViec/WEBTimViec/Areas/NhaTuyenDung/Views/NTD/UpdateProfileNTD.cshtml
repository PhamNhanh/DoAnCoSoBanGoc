@model WEBTimViec.Models.ApplicationUser
@{
    ViewData["Title"] = "Cập nhật thông tin Profile";
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">
</head>
<body>

    <h1 class="tieude">Cập nhật thông tin Profile</h1>
    <div class="ha1">
        <div class="khung2">
            <form asp-action="UpdateProfileNTD" method="post" enctype="multipart/form-data" class="ha1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mautrong">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 style="font-family: 'Times New Roman'" class="header">Thông tin nhà tuyển dụng</h3>
                    </div>
                    <div class="info-section">
                        <div class="info-item1">
                            <label asp-for="NhaTuyenDung_name" style="font-family: 'Times New Roman'; font-size: 20px" class="control-label">Tên công ty</label>
                            <input asp-for="NhaTuyenDung_name" style="font-family: 'Times New Roman'; font-size: 18px" class="form-control custom-background" value="@Model.NhaTuyenDung_name" />
                            <span asp-validation-for="NhaTuyenDung_name" class="text-danger"></span>
                        </div>
                        <div class="info-item1">
                            <label asp-for="SDTNhaTuyenDung" style="font-family: 'Times New Roman'; font-size: 20px" class="control-label">Số điện thoại công ty</label>
                            <input asp-for="SDTNhaTuyenDung" style="font-family: 'Times New Roman'; font-size: 18px" class="form-control custom-background" />
                            <span asp-validation-for="SDTNhaTuyenDung" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="info-section">
                        <div class="info-item1">
                            <label asp-for="Website" style="font-family: 'Times New Roman'; font-size: 20px" class="control-label">Website</label>
                            <input asp-for="Website" style="font-family: 'Times New Roman'; font-size: 18px" class="form-control custom-background" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                        <div class="info-item1">
                            <label asp-for="FullName" style="font-family: 'Times New Roman'; font-size: 20px" class="control-label">Tên cá nhân</label>
                            <input asp-for="FullName" style="font-family: 'Times New Roman'; font-size: 18px" class="form-control custom-background" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="info-item1">
                            <label asp-for="DiaChi" style="font-family: 'Times New Roman'; font-size: 20px">Địa điểm công ty</label>
                            <input asp-for="DiaChi" style="font-family: 'Times New Roman'; font-size: 18px" class="form-control custom-background" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        <div class="info-item1">
                            <label for="image_url">Logo công ty</label>
                            <input type="file" id="image_url" name="image_url" class="form-control custom-background" accept="image/*" />
                            <img src="@Model.image_url" class="info-item" alt="Logo công ty" style="max-width:200px;" id="previewImage" />
                            <span asp-validation-for="image_url" class="info-item"></span>
                        </div>

                    </div>

                    <div class="info-item1">
                        <label asp-for="GioiThieuNhaTuyenDung" style="font-family: 'Times New Roman'; font-size: 20px" class="control-label">Giới thiệu về công ty</label>
                        <textarea asp-for="GioiThieuNhaTuyenDung" class="form-control custom-background" style="font-family: 'Times New Roman'; height: 200px; font-size: 18px"></textarea>
                        <span asp-validation-for="GioiThieuNhaTuyenDung" class="text-danger"></span>
                    </div>
                    <div class="edit-link">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
                        
            </form>
        </div>
    </div>
    </body>