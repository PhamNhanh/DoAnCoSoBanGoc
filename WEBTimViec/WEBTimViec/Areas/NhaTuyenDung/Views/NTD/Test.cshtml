@model IEnumerable<WEBTimViec.Models.UngTuyen>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Chi tiết các bài ứng tuyển</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Roboto', sans-serif;
        }

        .styled-button {
            margin-top: 20px;
            display: inline-block;
        }

            .styled-button a {
                text-decoration: none;
                color: #007bff;
                font-size: 16px;
                font-weight: bold;
            }

                .styled-button a:hover {
                    color: #0056b3;
                }

        .khung3 {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .tieude {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary, .btn-success {
            padding: 8px 20px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Nút quay lại -->
    <div class="styled-button">
        <a href="@Url.Action("Index", "NTD")"> <<< Quay lại </a>
    </div>

    <div class="khung3">
        <h1 class="tieude">Chi tiết các bài ứng tuyển</h1>

        <div class="styled-button">
            <a href="@Url.Action("DSUngTuyen", "NTD")"> Hiển thị dưới dạng bài tuyển dụng </a>
        </div>

        <!-- Bảng ứng viên -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên ứng viên</th>
                    <th>Email</th>
                    <th>Chi tiết tuyển dụng</th>
                    <th>Xem CV</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ungtuyen in Model)
                {
                    <tr>
                        <td>@ungtuyen.TenUngVien</td>
                        <td>@ungtuyen.EmailUV</td>
                        <td style="font-size: 20px; color: black">
                            <a href="@Url.Action("DetailsBaiTuyenDung", "NTD", new { id = ungtuyen.BaiTuyenDungid })" style="color: black; font-size: 20px;">Xem</a>
                        </td>
                        <td style="font-size: 20px; color: black">
                            <a href="@ungtuyen.url_CV" target="_blank" style="color: black; font-size: 20px;">Xem CV</a>
                        </td>
                        <td>
                            <form class="feedback-form" method="post">
                                <input type="hidden" name="UngTuyen_id" value="@ungtuyen.UngTuyen_id" />
                                <input type="hidden" name="BaiTuyenDung_id" value="@ungtuyen.BaiTuyenDungid" />
                                @if (ungtuyen.TrangThai == null)
                                {
                                    <input type="text" class="form-control" name="TrangThai" placeholder="Nhập phản hồi" value="@ungtuyen.TrangThai" />
                                    <button type="submit" class="btn btn-primary mt-2">Gửi phản hồi</button>
                                }
                                else
                                {
                                    @* Kiểm tra trạng thái và thay đổi màu nền và màu nút *@
                                    @if (ungtuyen.TrangThai.Contains("chưa") || ungtuyen.TrangThai.Contains("Không") || ungtuyen.TrangThai.Contains("không") || ungtuyen.TrangThai.Contains("Chưa"))
                                    {
                                        <input type="text" class="form-control" name="TrangThai" value="@ungtuyen.TrangThai" style="background-color: #f8d7da; color: black;" />
                                        <button type="submit" class="btn btn-danger mt-2">Gửi lại phản hồi</button>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="TrangThai" value="@ungtuyen.TrangThai" style="background-color: #54ec82; color: black;" />
                                        <button type="submit" class="btn btn-success mt-2">Gửi lại phản hồi</button>
                                    }
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</body>
</html>
