@model WEBTimViec.Models.BaiTuyenDung

@{
    ViewData["Title"] = "Thêm bài tuyển dụng";
    Layout = "~/Views/Shared/_LayoutNhaTuyenDung.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Các liên kết CSS của bạn -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">

    <style>
        /* Layout phân chia màn hình */
        .container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin: 20px;
        }

        .form-section {
            flex: 1;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .map-section {
            flex: 1;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            height: 100%;
        }

        /* Bổ sung các style khác cho form nếu cần */
        .tieude {
            text-align: center;
            margin-top: 40px;
        }
    </style>
</head>

<body class="background">
    <button class=" styled-button">
        <a style="color: black;" href="@Url.Action("Index", "NTD")"> <<< </a>
    </button>

    <h1 class="tieude">Thêm tin tuyển dụng</h1>
    <hr />
    <div class="khung" style="margin-left: 50px; margin-right: 50px;">
        <form asp-action="AddBaiTuyenDung" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="info-section">
                <div class="info-item1">
                    <label asp-for="TenCongViec" class="control-label"> Tên công việc</label>
                    <input asp-for="TenCongViec" class="form-control" required />
                    <span asp-validation-for="TenCongViec" class="text-danger"></span>
                </div>
            </div>
            <div class="info-section">
                <div class="info-item1">
                    <label asp-for="MoTaCongViec" class="control-label"> Mô tả công việc</label>
                    <textarea asp-for="MoTaCongViec" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="MoTaCongViec" class="text-danger"></span>
                </div>
                <div class="info-item1">
                    <label asp-for="YeuCauKyNang" class="control-label"> Yêu cầu công việc</label>
                    <textarea asp-for="YeuCauKyNang" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="YeuCauKyNang" class="text-danger"></span>
                </div>
            </div>
            <div class="info-section">

                <div class="info-item1">
                    <label>Danh sách: </label>
                    <span id="chuyenNganhLabel" onclick="toggleCheckboxList('chuyenNganhCheckboxList')" style="cursor: pointer; color: black; text-decoration: underline;">
                        Chuyên Ngành
                    </span>
                    <div id="chuyenNganhCheckboxList" style="display: none;">
                        @foreach (var chuyenNganh in ViewBag.ChuyenNganh)
                        {
                            <div class="form-check">
                                <input type="checkbox" name="ChuyenNganhIds" value="@chuyenNganh.Value" class="form-check-input" id="chuyenNganh_@chuyenNganh.Value" />
                                <label class="form-check-label" for="chuyenNganh_@chuyenNganh.Value">@chuyenNganh.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="info-item1">
                    <label>Danh sách:</label>
                    <span id="viTriLabel" onclick="toggleCheckboxList('viTriCheckboxList')" style="cursor: pointer; color: black; text-decoration: underline;">
                        Vị Trí Công Việc
                    </span>
                    <div id="viTriCheckboxList" style="display: none;">
                        @foreach (var viTri in ViewBag.ViTriCongViec)
                        {
                            <div class="form-check">
                                <input type="checkbox" name="ViTriCongViecIds" value="@viTri.Value" class="form-check-input" id="viTri_@viTri.Value" />
                                <label class="form-check-label" for="viTri_@viTri.Value">@viTri.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="info-item1">
                    <label>Danh sách:</label>
                    <span id="kyNangMemLabel" onclick="toggleCheckboxList('kyNangMemCheckboxList')" style="cursor: pointer; color: black; text-decoration: underline;">
                        Kỹ Năng Mềm
                    </span>
                    <div id="kyNangMemCheckboxList" style="display: none;">
                        @foreach (var kyNangMem in ViewBag.KyNangMem)
                        {
                            <div class="form-check">
                                <input type="checkbox" name="KyNangMemIds" value="@kyNangMem.Value" class="form-check-input" id="kyNangMem_@kyNangMem.Value" />
                                <label class="form-check-label" for="kyNangMem_@kyNangMem.Value">@kyNangMem.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="info-item1">
                    <label asp-for="PhucLoi" class="control-label"> Phúc lợi</label>
                    <textarea asp-for="PhucLoi" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="PhucLoi" class="text-danger"></span>
                </div>

            </div>
            <div class="info-section">
                <div class="info-item1">
                    <label asp-for="KieuCongViec" class="control-label"> Loại công việc</label>
                    <select asp-for="KieuCongViec" class="form-control">
                        <option value="Full-Time">Full-Time</option>
                        <option value="Part-Time">Part-Time</option>
                    </select>
                    <span asp-validation-for="KieuCongViec" class="text-danger"></span>
                </div>
                <div class="info-item1">
                    <div class="row">
                        <div class="col">
                            <label asp-for="Luong_min" class="control-label"> Lương từ</label>
                            <div class="input-group">
                                <input asp-for="Luong_min" class="form-control" type="number" required />
                                <div class="input-group-append">
                                    <span class="input-group-text">triệu đồng</span>
                                </div>
                            </div>
                            <span asp-validation-for="Luong_min" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Luong_max" class="control-label"> Đến</label>
                            <div class="input-group">
                                <input asp-for="Luong_max" class="form-control" type="number" required />
                                <div class="input-group-append">
                                    <span class="input-group-text">triệu đồng</span>
                                </div>
                            </div>
                            <span asp-validation-for="Luong_max" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="info-section">
                <div class="info-item1">
                    <label asp-for="thanhPhoId" class="control-label" style="font-weight: bold;">Địa điểm công ty</label>
                    <select asp-for="thanhPhoId" asp-items="ViewBag.ThanhPho" class="form-control">
                        <option value="">-- Chọn tỉnh - Thành phố --</option>
                    </select>
                    <span asp-validation-for="thanhPhoId" class="text-danger"></span>
                </div>
                <div class="info-item1">
                    <label asp-for="kinhNghiemId" class="control-label" style="font-weight: bold;">
                        Kinh nghiệm ứng viên
                    </label>
                    <select asp-for="kinhNghiemId" asp-items="ViewBag.KinhNghiem" class="form-control">
                        <option value="">-- Chọn Kinh nghiệm --</option>
                    </select>
                    <span asp-validation-for="kinhNghiemId" class="text-danger"></span>
                </div>
                </div>
            <div class="info-section">
                <div class="info-item1">
                    <label asp-for="ThoiGianHetHan" class="control-label"> Hạn nộp hồ sơ</label>
                    <input asp-for="ThoiGianHetHan" class="form-control datepicker" asp-format="{0:dd/MM/yy}" required />
                    <span asp-validation-for="ThoiGianHetHan" class="text-danger"></span>
                </div>
            </div>

            <div class="center-text">
                <input type="submit" value="Đăng bài tuyển dụng" class="thembaituyendung" />
            </div>

        </form>
    </div>

</body>
</html>
<script>
    function toggleCheckboxList(listId) {
        var checkboxList = document.getElementById(listId);
        checkboxList.style.display = checkboxList.style.display === "none" ? "block" : "none";
    }
</script>