@model WEBTimViec.Models.LoaiTaiKhoan
<head>
    <style>
        .container {
            margin-top: 100px; /* Tăng khoảng cách với lề trên */
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
            background-color: #ffffff;
        }

        .card-footer {
            background-color: #f8f9fa;
            padding: 10px;
        }

        h3 {
            font-size: 24px;
            color: #007bff;
        }

        p {
            font-size: 16px;
            line-height: 1.5;
        }

        .btn-secondary {
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>

<div class="container mt-5" style="margin-top: 80px">
    <div class="card">
        <div class="card-header text-center" style="margin-top: 80px">
            <h2>Chi Tiết Loại Tài Khoản</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center">@Model.tenLoaiTaiKhoan</h3>
            <p><strong>Số bài tuyển dụng giới hạn:</strong> @Model.soBaiTuyenDung</p>
            <p><strong>Giá gói:</strong> @Model.gia vnd</p>
            <p><strong>Số ngày sử dụng:</strong> @Model.soNgayDung</p>

            <a href="@Url.Action("XacNhanDangKy", "NTD", new { loaiTaiKhoanId = Model.loaiTaiKhoanId })" class="btn btn-primary">Đăng Ký</a>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("DanhSachLoaiTaiKhoan", "NTD")" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>
