@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JobPlus</title>
    <link rel="stylesheet" href="~/css/ViewIndex.css">
</head>
