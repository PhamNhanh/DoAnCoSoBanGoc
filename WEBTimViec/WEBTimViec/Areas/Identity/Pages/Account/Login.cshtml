@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/LayoutLogin.cshtml" ;
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">

</head>

<body class="background">
    <div class="row justify-content-center">
        <div class="form-container">
                <h3 >Đăng nhập</h3>
                <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control"  autocomplete="username" aria-required="true" placeholder="tenban@gmail.com" />
                    <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" ></span>
                    </div>
                <div class="form-floating mb-3">
                        <input type="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                        @* <span asp-validation-for="Input.Password" class="text-danger"></span> *@
                        <span ><i  onclick="showPassword(event)"></i></span>
                    </div>
                <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-block" >Đăng nhập</button>
                    </div>
                </form>
            <div class="text-center mt-3">
                <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account", new { area = "Identity" })">Đăng ký ngay</a></p>
            </div>
        </div>
        <img class="hero__image" src="~/images/blog/home-blog2.jpg" alt="">
    </div>

    <style>
        .form-container {
            position: absolute; /* Đặt vị trí tuyệt đối để nó nằm trên ảnh */
            top: 50%; /* Căn giữa theo chiều dọc */
            left: 50%; /* Căn giữa theo chiều ngang */
            transform: translate(-50%, -50%); /* Dịch chuyển để căn giữa chính xác */
            width: 100%; /* Đặt chiều rộng là 100% */
            max-width: 400px; /* Đặt chiều rộng tối đa */
            background-color: rgba(255, 255, 255, 0.8); /* Nền trắng trong suốt để dễ nhìn */
            border-radius: 10px; /* Bo góc cho div */
            padding: 20px; /* Khoảng cách bên trong */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Tạo bóng cho div */
            z-index: 10; /* Đảm bảo div nằm trên ảnh */
        }

        .hero__image {
            width: 100%;
            height: auto;
            position: relative; /* Đặt vị trí tương đối cho ảnh */
        }
    </style>>

    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>
</body>
</html>