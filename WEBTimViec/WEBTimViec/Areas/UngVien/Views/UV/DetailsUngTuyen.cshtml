@model IEnumerable<WEBTimViec.Models.UngTuyen>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Roboto', sans-serif;
        }

        .styled-button a {
            text-decoration: none;
            color: #007bff;
            font-size: 18px;
            font-weight: bold;
        }

            .styled-button a:hover {
                color: #0056b3;
            }

        .tieude {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td {
            font-size: 18px;
            color: black;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .badge-warning {
            background-color: #f0ad4e;
        }

        .badge-success {
            background-color: #5bc0de;
        }

        .badge {
            font-size: 16px;
            padding: 8px 16px;
            border-radius: 12px;
        }

        .table a {
            color: green;
            font-size: 18px;
            text-decoration: none;
        }

            .table a:hover {
                color: darkgreen;
            }

        .container {
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }

        .btn-back {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 5px;
            text-align: center;
            color: #007bff;
            margin-bottom: 30px;
        }

            .btn-back:hover {
                background-color: #e2e6ea;
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <button class="btn-back">
            <a href="@Url.Action("DSUngTuyen", "UV")"> <<< Quay lại</a>
        </button>

        <h1 class="tieude">Danh sách bài ứng tuyển</h1>

        @if (Model == null || !Model.Any())
        {
            <p>Bạn chưa ứng tuyển vào bài tuyển dụng này</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã ứng tuyển</th>
                        <th>Tên ứng viên</th>
                        <th>Thời gian ứng tuyển</th>
                        <th>Bài Tuyển Dụng</th>
                        <th>CV</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ungtuyen in Model)
                    {
                        <tr>
                            <td>@ungtuyen.UngTuyen_id</td>
                            <td>@ungtuyen.TenUngVien</td>
                            <td>@ungtuyen.ThoiGianUngTuyen</td>
                            <td style="font-size: 20px; color: black">
                                <a href="@Url.Action("DetailsBaiTuyenDung", "UV", new { id = ungtuyen.BaiTuyenDungid })" style="color: black; font-size: 20px;">Xem</a>
                            </td>
                            <td>
                                <a href="@ungtuyen.url_CV" target="_blank">Xem CV</a>
                            </td>

                            <td>
                                @if (ungtuyen.TrangThai == null)
                                {
                                    <label class="badge badge-warning">Chưa phê duyệt</label>
                                }
                                else
                                {
                                    <div>Phản hồi từ nhà tuyển dụng:</div>
                                    <label class="badge badge-success">@ungtuyen.TrangThai</label>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
