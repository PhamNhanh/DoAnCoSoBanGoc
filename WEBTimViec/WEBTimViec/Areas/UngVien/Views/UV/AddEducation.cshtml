@model WEBTimViec.Models.HocVan

@{
    ViewData["Title"] = "Thêm học vấn";
    Layout = "~/Views/Shared/_LayoutUngVien.cshtml";
}

<div class="khung">
    <h4>Thêm học vấn</h4>
    <form asp-area="UngVien" asp-controller="UV" asp-action="AddEducation" method="post">
        <div class="card-body d-flex">
            <i class="fas fa-school school-icon fa-3x mr-3" style="margin-right:10px"></i> <!-- Icon trường học từ Font Awesome -->
            <div>
                <h5 class="school-name">
                    <label asp-for="TruongDaiHocid" class="control-label">Học vấn</label>
                    <select asp-for="TruongDaiHocid" asp-items="ViewBag.TruongDaiHoc" class="form-control">
                        <option value="">-- Chọn Trường Đại Học / Cao Đẳng --</option>
                    </select>
                    <span asp-validation-for="TruongDaiHocid" class="text-danger"></span>
                </h5>
                <h5 class="school-name">
                    <label asp-for="chuyenNganhId" class="control-label">Học vấn</label>
                    <select asp-for="chuyenNganhId" asp-items="ViewBag.ChuyenNganh" class="form-control">
                        <option value="">-- Chuyên ngành --</option>
                    </select>
                    <span asp-validation-for="chuyenNganhId" class="text-danger"></span>
                </h5>
                <div>
                    <label asp-for="GPA" class="control-label">GPA</label>
                    <input asp-for="GPA" class="form-control" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="NgayBatDau" class="control-label">Bắt đầu</label>
                    <input asp-for="NgayBatDau" class="form-control datepicker" asp-format="{0:dd/MM/yy}" />
                    <label asp-for="NgayTotNghiep" class="control-label">Kết thúc</label>
                    <input asp-for="NgayTotNghiep" class="form-control datepicker" asp-format="{0:dd/MM/yy}" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
            </div>
    </form>
</div>
