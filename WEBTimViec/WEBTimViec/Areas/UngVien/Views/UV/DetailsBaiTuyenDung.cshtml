@model WEBTimViec.Models.BaiTuyenDung

@{
    ViewData["Title"] = "Chi tiết bài tuyển dụng  ";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h1 class="tieude">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center">@Model.TenCongViec</h3>

                        <p class="card-text"><strong>Mô tả công việc:</strong> @Model.MoTaCongViec</p>
                        <p class="card-text"><strong>Yêu cầu kỹ năng:</strong> @Model.YeuCauKyNang</p>
                        <p class="card-text"><strong>Phúc lợi:</strong> @Model.PhucLoi</p>
                        <p class="card-text"><strong>Lương:</strong> @Model.Luong_min - @Model.Luong_max triệu đồng</p>
                        <p class="card-text"><strong>Loại công việc:</strong> @Model.KieuCongViec</p>
                        <p class="card-text"><strong>Hạn nộp hồ sơ:</strong> @Model.ThoiGianHetHan</p>
                        <p class="card-text"><strong>Thành phố:</strong> @ViewData["TenTP"]</p>

                        <p class="card-text">
                            <strong>Chuyên ngành:</strong>
                            @if (ViewBag.ChuyenNganhs != null)
                            {
                                @string.Join(", ", ViewBag.ChuyenNganhs)
                            }
                        </p>
                        <p class="card-text">
                            <strong>Vị trí công việc:</strong>
                            @if (ViewBag.ViTriCongViecs != null)
                            {
                                @string.Join(", ", ViewBag.ViTriCongViecs)
                            }
                        </p>
                        <p class="card-text">
                            <strong>Kỹ năng mềm:</strong>
                            @if (ViewBag.KyNangMems != null)
                            {
                                @string.Join(", ", ViewBag.KyNangMems)
                            }
                        </p>

                        <div class="text-center">
                            <a href="@Url.Action("UngTuyen", new { id = Model.BaiTuyenDung_id })" class="btn btn-primary">Ứng tuyển</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

