@model WEBTimViec.Models.ApplicationUser
@{
    ViewData["Title"] = "Thông tin ứng viên";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">

</head>
<div class="container bg-light shadow-lg p-4 mt-5 mb-5 rounded" style="margin-top: 150px; background-color: #FDF5E6;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <button class="btn btn-outline-dark" style="margin-bottom: 40px; margin-right: 20px; white-space: nowrap;">
            <a href="@Url.Action("Index", "UV")" style="text-decoration: none; color: inherit;">&laquo; Quay lại</a>
        </button>
        <div class="container bg-light shadow-lg p-4 mt-5 mb-5 rounded" style="margin-top: 20px;">
            <h2 style="font-family: 'Times New Roman'; font-weight: bold; color: #2c3e50; text-align: center; margin-top: 0;">
                Thông tin ứng viên
            </h2>
            <!-- Phần còn lại của nội dung -->
        </div>
    </div>

    <div class="row">
        <!-- Ảnh và thông tin cơ bản -->
        <div class="col-md-4 text-center border-end" style="background-color: #FDF5E6;">
            <img class="rounded-circle shadow mt-3" width="200px" src="@Model.image_url" alt="Avatar">
            <h4 class="mt-3" style="font-family: 'Times New Roman'; font-weight: bold; color: #34495e;">@Model.FullName</h4>
            <p class="text-muted">@Model.Email</p>
        </div>

        <!-- Thông tin chi tiết -->
        <div class="col-md-8" style="background-color: #FFFAF0;">
            <div class="p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" style="font-family: 'Times New Roman'; font-size: 18px;">Tên ứng viên:</label>
                        <p class="form-control bg-white border border-secondary">@Model.FullName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" style="font-family: 'Times New Roman'; font-size: 18px;">Số điện thoại:</label>
                        <p class="form-control bg-white border border-secondary">@Model.SDT_UngVien</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" style="font-family: 'Times New Roman'; font-size: 18px;">Email:</label>
                        <p class="form-control bg-white border border-secondary">@Model.Email</p>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" style="font-family: 'Times New Roman'; font-size: 18px;">Địa chỉ:</label>
                        <p class="form-control bg-white border border-secondary">@Model.DiaChi</p>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" style="font-family: 'Times New Roman'; font-size: 18px;">Giới thiệu bản thân:</label>
                        <textarea readonly class="form-control bg-white border border-secondary" style="height: 150px; font-family: 'Times New Roman'; font-size: 16px;">@Model.TuGioiThieu</textarea>
                    </div>
                </div>
            </div>

            <!-- Hành động với khung tròn và bo tròn nút -->
            <div class="mt-4 d-flex justify-content-between" style="border-radius: 30px; padding: 20px; background-color: #ecf0f1;">
                <a class="btn btn-primary px-4" style="background-color: #27ae60; border-color: #f39c12; border-radius: 30px;" asp-controller="UV" asp-action="IndexHocVan" asp-route-id="@Model.Id">Xem học vấn</a>
                <a class="btn btn-primary px-4" style="background-color: #27ae60; border-color: #f39c12; border-radius: 30px;" href="/UngVien/UV/AddEducation">Thêm học vấn</a>
                <a class="btn btn-warning px-4 text-white" style="background-color: #27ae60; border-color: #f39c12; border-radius: 30px;" asp-controller="UV" asp-action="UpdateProfileUV" asp-route-id="@Model.Id">Chỉnh sửa thông tin</a>
            </div>
        </div>
    </div>
</div>
