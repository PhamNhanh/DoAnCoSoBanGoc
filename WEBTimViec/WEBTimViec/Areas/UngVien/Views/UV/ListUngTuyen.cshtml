@model IEnumerable<WEBTimViec.Models.UngTuyen>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Chi tiết các bài ứng tuyển</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Roboto', sans-serif;
        }

        .styled-button {
            margin-top: 20px;
            display: inline-block;
        }

            .styled-button a {
                text-decoration: none;
                color: #007bff;
                font-size: 16px;
                font-weight: bold;
            }

                .styled-button a:hover {
                    color: #0056b3;
                }

        .khung3 {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .tieude {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary, .btn-success {
            padding: 8px 20px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Nút quay lại -->
    <div class="styled-button">
        <a href="@Url.Action("Index", "NTD")"> <<< Quay lại </a>
    </div>

    <div class="khung3">
        <h1 class="tieude">Chi tiết các bài ứng tuyển</h1>

        <!-- Bảng ứng viên -->
        <form method="post">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên ứng viên</th>
                        <th>Email</th>
                        <th>Chi tiết tuyển dụng</th>
                        <th>Xem CV</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ungtuyen in Model)
                    {
                        <tr>
                            <td>@ungtuyen.TenUngVien</td>
                            <td>@ungtuyen.EmailUV</td>
                            <td style="font-size: 20px; color: black">
                                <a href="@Url.Action("DetailsBaiTuyenDung", "UV", new { id = ungtuyen.BaiTuyenDungid })" style="color: black; font-size: 20px;">Xem</a>
                            </td>
                            <td style="font-size: 20px; color: black">
                                <a href="@ungtuyen.url_CV" target="_blank" style="color: black; font-size: 20px;">Xem CV</a>
                            </td>
                            <td>
                                <input type="text" class="form-control" name="status_@ungtuyen.UngTuyen_id" value="@ungtuyen.TrangThai" />
                                <button type="submit" class="btn btn-primary mt-2">Gửi phản hồi</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</body>
</html>
