@model IEnumerable<WEBTimViec.Models.BaiTuyenDung>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet">
</head>
<body>
    <button class=" styled-button">
        <a style="color: black;" href="@Url.Action("Index", "UV")"> <<< </a>
    </button>

    <div class="khung2">
        <h1 class="tieude">Danh sách bài ứng tuyển</h1>
        <div class="row">
            @foreach (var baiTuyenDung in Model)
            {
                <div class="col-md-4">
                    <div class="khungchu">
                        <div class="card" data-url="@Url.Action("DetailsUngTuyen", "UV", new { id = baiTuyenDung.BaiTuyenDung_id })">
                    <div class="card-body">
                                <h5 class="card-title"><strong>Công ty: </strong>@baiTuyenDung.applicationUser.NhaTuyenDung_name</h5>
                                <img src="@baiTuyenDung.applicationUser.image_url" alt="Logo" class="img-fluid">
                                <h5 class="card-title overflow-ellipsis"><strong>Công việc: </strong>@baiTuyenDung.TenCongViec</h5>
                                <a href="@Url.Action("DetailsUngTuyen", "UV", new { id = baiTuyenDung.BaiTuyenDung_id })" class="btn btn-info">Chi tiết</a>
                    </div>
                </div>
                </div>
                </div>
            }
        </div>
    </div>
</body>
</html>