@model IEnumerable<WEBTimViec.Models.ApplicationUser>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Main CSS File -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            color: #1c1e21;
        }

        .khung3 {
            max-width: 800px;
            margin: 30px auto;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .tieude {
            font-size: 24px;
            font-weight: bold;
            color: #1877f2;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

            .table th, .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #f5f6f7;
                color: #1c1e21;
                font-weight: bold;
            }

            .table tr:hover {
                background-color: #f0f2f5;
            }

        .styled-button {
            margin: 20px;
            background-color: #1877f2;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .styled-button a {
                text-decoration: none;
                color: white;
                font-weight: bold;
            }

            .styled-button:hover {
                background-color: #165cab;
            }

        .btn-info {
            background-color: #1877f2;
            border: none;
            color: white;
            border-radius: 5px;
            padding: 5px 15px;
            text-decoration: none;
        }

            .btn-info:hover {
                background-color: #165cab;
            }

        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <button class="styled-button">
        <a href="@Url.Action("Index", "UV")"> <<< Quay lại </a>
    </button>

    <div class="khung3">
        <h1 class="tieude">Danh sách nhà tuyển dụng</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Tên công ty</th>
                    <th>Địa chỉ</th>
                    <th>Website</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody id="company-list">
                @foreach (var company in Model.Take(3)) // Lấy 3 công ty đầu tiên
                {
                    <tr>
                        <td>@company.NhaTuyenDung_name</td>
                        <td>@company.DiaChi</td>
                        <td>@company.Website</td>
                        <td>
                            <a href="@Url.Action("DetailsNhaTuyenDung", "UV", new { id = company.Id })" class="btn btn-info">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
                @foreach (var company in Model.Skip(3)) // Các công ty còn lại, ẩn ban đầu
                {
                    <tr class="hidden">
                        <td>@company.NhaTuyenDung_name</td>
                        <td>@company.DiaChi</td>
                        <td>@company.Website</td>
                        <td>
                            <a href="@Url.Action("DetailsNhaTuyenDung", "UV", new { id = company.Id })" class="btn btn-info">
                                <i class="bi bi-eye"></i> Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button id="show-more" class="styled-button">Xem thêm</button>
    </div>

    <script>
        document.getElementById('show-more').addEventListener('click', function () {
            const hiddenRows = document.querySelectorAll('.hidden');
            hiddenRows.forEach(row => row.classList.remove('hidden')); // Hiện tất cả các hàng bị ẩn
            this.style.display = 'none'; // Ẩn nút "Xem thêm"
        });
    </script>
</body>
</html>
