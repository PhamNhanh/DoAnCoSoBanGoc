@model IEnumerable<WEBTimViec.Models.HocVan>

@{
    ViewData["Title"] = "Thông tin ứng viên";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">
</head>
<button class=" styled-button">
    <a style="color: black;" href="@Url.Action("IndexProfileUV", "UV")"> <<< </a>
</button>
<div class="container-fluid bg-white mt-5 mb-5">
    <div class="row">
        @foreach (var hocVan in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Thông tin học vấn</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="labels">Điểm trung bình hệ 4</label>
                            <div class="form-control">@hocVan.GPA</div>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Trường đại học </label>
                            <div class="form-control">@hocVan.truongDaiHoc.TruongDaiHoc_name</div>
                        </div><div class="col-md-6">
                            <label class="labels">Chuyên ngành </label>
                            <div class="form-control">@hocVan.chuyenNganhs.ChuyenNganh_name</div>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Ngày nhập học</label>
                            <div class="form-control">@hocVan.NgayBatDau</div>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Ngày tốt nghiệp</label>
                            <div class="form-control">@hocVan.NgayTotNghiep</div>
                        </div>
                        <div class="row">
                        <div class="col-md-12 mt-3">
                            <!-- Form để xóa thông tin học vấn -->
                            <form method="post" action="@Url.Action("DeleteEducation", "UV", new { id = hocVan.HocVan_id })" onsubmit="return confirm('Bạn có chắc chắn muốn xóa học vấn này?');" class="d-inline">
                                <button type="submit" class="btn btn-danger">Xóa thông tin học vấn</button>
                            </form>
                            <!-- Nút để chuyển hướng đến trang cập nhật học vấn -->
                            <a href="@Url.Action("UpdateEducation", "UV", new { id = hocVan.HocVan_id })" class="btn btn-info mr-2">Cập nhật thông tin học vấn</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>