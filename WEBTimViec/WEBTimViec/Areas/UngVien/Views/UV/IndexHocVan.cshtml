@model IEnumerable<WEBTimViec.Models.HocVan>

@{
    ViewData["Title"] = "Thông tin ứng viên";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>JobPlus</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet">

    <style>
/*         .container-fluid {
            background-color: #f4f6f9;
        } */

        .card {
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
            background: #ffffff;
        }

        .card-body {
            padding: 30px;
        }

        .card-title {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 20px;
        }

        .labels {
            font-size: 16px;
            font-weight: 500;
            color: #333;
        }

        .form-control {
            font-size: 14px;
            border-radius: 8px;
            border: 1px solid #ccc;
            background-color: #fafafa;
            padding: 10px;
        }

        .btn {
            font-size: 14px;
            padding: 8px 20px;
            border-radius: 5px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-danger:hover, .btn-info:hover {
                opacity: 0.9;
            }

        .styled-button a {
            font-size: 16px;
            color: #000;
            text-decoration: none;
        }

            .styled-button a:hover {
                color: #007bff;
            }

        .mb-3 {
            margin-bottom: 15px;
        }

        .mt-3 {
            margin-top: 15px;
        }

        .rounded-circle {
            border-radius: 50%; /* Tạo hình tròn */
            width: 40px; /* Chiều rộng logo */
            height: 40px; /* Chiều cao logo */
            object-fit: cover; /* Cắt ảnh vừa khung tròn */
        }

        .d-flex {
            display: flex; /* Sử dụng Flexbox */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

        .me-2 {
            margin-right: 8px; /* Tạo khoảng cách giữa logo và tên trường */
        }

    </style>
</head>

<button class="styled-button mb-4">
    <a href="@Url.Action("IndexProfileUV", "UV")"> <<< Quay lại</a>
</button>

<div class="container-fluid mt-5 mb-5">
    <div class="row">
        @foreach (var hocVan in Model)
        {
            <div class="col-md-12 col-lg-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin học vấn</h5>
                        <div class="row">
                            <div class="form-control d-flex align-items-center">
                                <img src="@hocVan.truongDaiHoc.url_logo" alt="Logo" class="rounded-circle me-2">
                                <span>@hocVan.truongDaiHoc.TruongDaiHoc_name</span>
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Chuyên ngành</label>
                                <div class="form-control">@hocVan.chuyenNganhs.ChuyenNganh_name</div>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Điểm trung bình hệ 4</label>
                                <div class="form-control">@hocVan.GPA</div>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Ngày nhập học</label>
                                <div class="form-control">@hocVan.NgayBatDau</div>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Ngày tốt nghiệp</label>
                                <div class="form-control">@hocVan.NgayTotNghiep</div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <!-- Form để xóa thông tin học vấn -->
                                <form method="post" action="@Url.Action("DeleteEducation", "UV", new { id = hocVan.HocVan_id })" onsubmit="return confirm('Bạn có chắc chắn muốn xóa học vấn này?');" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Xóa thông tin học vấn</button>
                                </form>
                                <!-- Nút để chuyển hướng đến trang cập nhật học vấn -->
                                <a href="@Url.Action("UpdateEducation", "UV", new { id = hocVan.HocVan_id })" class="btn btn-info mr-2">Cập nhật thông tin học vấn</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>