@model WEBTimViec.Models.ThongKe

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/normalize.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/price_rangs.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/NhaTuyenDung.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
</head>
<body>
    <div class="khung">
        <div class="row">
            <div class="col">
                <div>
                    <h2 class="tieude">
                        Biểu đồ thống kê hệ thống
                    </h2>
                </div>
                <div>
                    <canvas id="thongKeChart" width="400" height="200"></canvas>
                </div>
            </div>
            <div class="col">
                <div>
                    <h2 class="tieude">
                        Biểu đồ thống kê hôm nay
                    </h2>
                </div>
                <div>
                    <canvas id="thongKeChartToday" width="400" height="200"></canvas>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col">
                <div>
                    <h2 class="tieude">
                        Biểu đồ nhà tuyển dụng với ứng viên
                    </h2>
                </div>
                <div>
                    <canvas id="donutChart" width="400" height="200"></canvas>
                </div>
            </div>
            <div class="col">
                <div>
                    <h2 class="tieude">
                        Biểu đồ bài tuyển dụng và ứng tuyển
                    </h2>
                </div>
                <div>
                    <canvas id="donutChart1" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
   
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var ctx = document.getElementById('thongKeChart').getContext('2d');
            var thongKeChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Tài khoản', 'Ứng viên', 'Nhà tuyển dụng', 'Bài tuyển dụng', 'Bài ứng tuyển'],
                    datasets: [{
                        label: 'Thống kê',
                        data: [@Model.slTaiKhoan, @Model.slUV, @Model.slNTD, @Model.slBTD, @Model.slUT],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 99, 132, 0.2)' // Màu cho cột mới (ví dụ: đỏ)
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 99, 132, 1)' // Màu cho cột mới (ví dụ: đỏ)
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        datalabels: {
                            anchor: 'end',
                            align: 'end',
                            formatter: function (value) {
                                return value;
                            }
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });


            var ctxToday = document.getElementById('thongKeChartToday').getContext('2d');
            var thongKeChartToday = new Chart(ctxToday, {
                type: 'bar',
                data: {
                    labels: ['Nhà tuyển dụng', 'Ứng viên', 'Bài tuyển dụng', 'Bài ứng tuyển'],
                    datasets: [{
                        label: 'Thống kê hôm nay',
                        data: [@Model.slntdinday, @Model.sluvinday, @Model.slbtdinday, @Model.slbaiutinday],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(153, 102, 255, 0.2)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            var ctxDonut = document.getElementById('donutChart').getContext('2d');
            var donutChart = new Chart(ctxDonut, {
                type: 'doughnut',
                data: {
                    labels: ['Nhà tuyển dụng', 'Ứng viên'],
                    datasets: [{
                        label: 'Thống kê',
                        data: [@Model.slNTD, @Model.slUV],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '0%', // Điều này tạo ra biểu đồ doughnut không có lỗ ở giữa
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Biểu đồ hình tròn số lượng nhà tuyển dụng và ứng viên',
                        }
                    },
                    cutoutPercentage: 50 // Thu nhỏ kích thước của biểu đồ đi một nửa
                }
            });

            var ctxDonut1 = document.getElementById('donutChart1').getContext('2d');
            var donutChart1 = new Chart(ctxDonut1, {
                type: 'doughnut',
                data: {
                    labels: ['Bài tuyển dụng', 'Bài ứng tuyển'],
                    datasets: [{
                        label: 'Thống kê',
                        data: [@Model.slBTD, @Model.slUT],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '0%', // Điều này tạo ra biểu đồ doughnut không có lỗ ở giữa
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Biểu đồ hình tròn số lượng bài tuyển dụng và bài ứng tuyển',
                        }
                    },
                    cutoutPercentage: 50 // Thu nhỏ kích thước của biểu đồ đi một nửa
                }
            });
        });
    </script>

</body>
</html>
