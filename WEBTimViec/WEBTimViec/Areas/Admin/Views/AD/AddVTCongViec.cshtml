@model WEBTimViec.Models.ViTriCongViec

@{
    ViewData["Title"] = "AddVTCongViec";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> JobPlus </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body class="bg-light">
    <div class="khung">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Thêm vị trí công việc mới</h2>

                        <div class="col-md-4">
                            <form asp-action="AddVTCongViec">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
@*                                     <label asp-for="ViTriCongViec_name" class="control-label"></label> *@
<p>Vị trí công việc</p>
                                    <input asp-for="ViTriCongViec_name" class="form-control" />
                                    <span asp-validation-for="ViTriCongViec_name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Thêm vị trí mới " class="btn btn-primary" />
                                </div>
                            </form>

                        <div class="text-center">
                            <a href="@Url.Action("ListVTCongViec")" class="btn btn-link">Quay lại danh sách vị trí công việc</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript here -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>