@model IEnumerable<WEBTimViec.Models.ChuyenNganh>

@{
    ViewData["Title"] = "ListChuyenNganh";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <p>
            <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
        </p>
        <h1 class="mt-3">Danh sách các chuyên ngành</h1>

        <p>
            <a href="@Url.Action("AddChuyenNganh")" class="btn btn-primary">Thêm chuyên ngành mới</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Tên chuyên ngành</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ChuyenNganh_name)</td>
                        <td>
                            <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                            @* <a href="#" class="btn btn-info btn-sm">Chi tiết</a> *@
                            <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
