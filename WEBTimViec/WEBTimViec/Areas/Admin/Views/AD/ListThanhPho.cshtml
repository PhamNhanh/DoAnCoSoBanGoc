@model IEnumerable<WEBTimViec.Models.ThanhPho>

@{
    ViewData["Title"] = "ListThanhPho";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<p>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
</p>
<h1>Danh sách các thành phố</h1>

<p>
    <a href="@Url.Action("AddThanhPho")" class="btn btn-primary">Thêm thành phố mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThanhPho_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhPho_name)
            </td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                    @* <a href="#" class="btn btn-info btn-sm">Chi tiết</a> *@
                    <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                </td>
        </tr>
}
    </tbody>
</table>
